<%- model_class = AssignedQuestion -%>
<div class="page-header">
  <h1><%=t 'response_choices_for' %> "<%= resource %>"</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t 'response' %></th>
      <th><%=t 'points' %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assigned_question.question.responses.each do |response| %>
      <tr>
        <td><%= raw(response.to_s) %></td>
        <td><span class="badge badge-inverse"><%= response.points %></span></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      [:edit,resource.question,response], :class => 'btn btn-mini' %>
          <%= link_to t('remove'),
                      question_response_path(resource.question,response,assigned_question_id: resource.id, assigned_question_set_id: parent.id),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure? This will remove this question from this question set.')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('add_response'),
              new_question_response_path(resource.question,assigned_question_id: resource.id, assigned_question_set_id: parent.id), :class => 'btn btn-primary'  %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              [resource.assigned_question_sets.first.survey,resource.assigned_question_sets.first], :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assigned_question_path(@assigned_question), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assigned_question_path(@assigned_question),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
