<%- model_class = Division -%>
<div class="page-header">
  <h1><%= @division.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:organization_id) %>:</strong></dt>
  <dd><%= link_to @division.organization, @division.organization %></dd>
  
  <dt><strong><%=t 'groups' %>:</strong></dt>
  <dd><%= raw(@division.groups.map{|group| link_to(group, [@division,group])}.join(', ')) %></dd>
</dl>


<div class="form-actions">
  <%= link_to t('create_new_group'),
              new_division_group_path(@division), :class => 'btn btn-primary'  %>
              
  <%= link_to t('.back', :default => t("helpers.links.back")),
              divisions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_division_path(@division), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              division_path(@division),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
