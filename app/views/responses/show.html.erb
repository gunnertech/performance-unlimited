<%- model_class = Response -%>
<div class="page-header clearfix">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question_id) %>:</strong></dt>
  <dd><%= @response.question_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_text) %>:</strong></dt>
  <dd><%= @response.short_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:long_text) %>:</strong></dt>
  <dd><%= @response.long_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @response.points %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              responses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_response_path(@response), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              response_path(@response),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
