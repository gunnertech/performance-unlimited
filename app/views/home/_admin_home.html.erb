<div class="row-fluid">
  <div class="span6">
    <h2>Navigation</h2>
    
    <%= form_tag('#', method: 'get', id: "dropdown-nav") do -%>
      <% if @possible_organizations.count > 1 %>
      <% else %>
        <%= hidden_field_tag :organization_id, @possible_organizations.first.id %>
      <% end %>
      
      <%= @possible_groups.map{|group| "<input class='division-#{group.division.id}' type='hidden' data-name='#{group.to_s}' data-division-id='#{group.division.id}' value='#{group.id}' />".html_safe }.join("").html_safe %>
      
      <%= select_tag :division_id, options_from_collection_for_select(@possible_divisions, "id", "to_s"), include_blank: true, class: 'input-small'  %>
      <%= select_tag :group_id, "", include_blank: true, class: 'input-small' %>
      <%= select_tag :location, options_for_select([ ["Admin",""], ["Dashboard","dashboard"] ], "Admin"), class: 'input-small' %>
      
      <%= submit_tag('Go', class: "btn btn-primary", style: "margin-bottom: 11px;") %>
    <% end %>

  </div>
  <div class="span6">
    <h2>Recent Activity</h2>
    <% Comment.where{ (created_at > my{current_user.last_sign_in_at}) & (for_user_id >> my{current_user.users.pluck('users.id')})}.each do |comment| %>
      <blockquote><p><%= comment.body %></p> <small><%= comment.commenter.name %> on <%= comment.user %> <cite><%= comment.left_on %></cite></small></blockquote>
    <% end %>
  </div>
</div>


<div class="row-fluid">
  <div class="span6">
    
    <h2 style="clear:both;">Divisions</h2>
    <%= render partial: "#{@division.nil? ? 'divisions' : @survey.nil? ? 'no_survey' : 'survey'}_index" %>
    <%#= render partial: "survey_index" %>
  </div>
  <div class="span6">
    <h2>Recent Alerts <small>Since your last login</small></h2>
    <% cache(cache_key_for_alerts(current_user)) do %>
      <% AssignedAlert.recent_for(current_user).each do |assigned_alert| %>
        <blockquote><p><span class="label label-important"><%= assigned_alert.alert.metric %></span> <%= assigned_alert.alert.message %></p> <small><%= assigned_alert.user %> <cite><%= assigned_alert.created_at.to_date %></cite></small></blockquote>
      <% end %>
    <% end %>
  </div>
</div>