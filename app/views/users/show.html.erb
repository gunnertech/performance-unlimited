<%- model_class = User -%>
<div class="page-header">
  <h1><%= @user %> <small>(<%= @user.groups.map(&:to_s).join(',') %>)</small></h1>
</div>

<section>
  <h2><%=t 'completed_surveys' %></h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%=t 'date_slug' %></th>
        <th><%=t 'name' %></th>
        <th><%=t 'score' %></th>
      </tr>
    </thead>
    <tbody>
      <% @user.completed_surveys.each do |completed_survey| %>
        <tr>
          <td><%= completed_survey.date %></td>
          <td><%= completed_survey %></td>
          <td><%= completed_survey.score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section class="row-fluid">
  <div class="span6">
    <h2><%=t 'last_5_days' %></h2>
    <div class="graph" data-user_id="<%= @user.id %>" data-day_range="5"></div>
  </div>
  
  <div class="span6">
    <h2><%=t 'last_10_days' %></h2>
    <div class="graph" data-user_id="<%= @user.id %>" data-day_range="10"></div>
  </div>
</section>

<section class="row-fluid">
  <div class="span6">
    <h2><%=t 'last_15_days' %></h2>
    <div class="graph" data-user_id="<%= @user.id %>" data-day_range="15"></div>
  </div>
  
  <div class="span6">
    <h2><%=t 'last_30_days' %></h2>
    <div class="graph" data-user_id="<%= @user.id %>" data-day_range="30"></div>
  </div>
</section>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
</div>
