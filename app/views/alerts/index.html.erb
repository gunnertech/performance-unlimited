<%- model_class = Alert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:alertable_type) %></th>
      <th><%= model_class.human_attribute_name(:alertable_id) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:metric_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:threshold_minimum) %></th>
      <th><%= model_class.human_attribute_name(:threshold_maximum) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= link_to alert.id, alert_path(alert) %></td>
        <td><%= alert.alertable_type %></td>
        <td><%= alert.alertable_id %></td>
        <td><%= alert.message %></td>
        <td><%= alert.metric_id %></td>
        <td><%= alert.date %></td>
        <td><%= alert.threshold_minimum %></td>
        <td><%= alert.threshold_maximum %></td>
        <td><%=l alert.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_alert_path(alert), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      alert_path(alert),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_alert_path,
            :class => 'btn btn-primary' %>
