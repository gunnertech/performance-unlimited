<%- model_class = Metric -%>
<div class="page-header">
  <h1><%= resource %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:metric_type_id) %>:</strong></dt>
  <dd><%= @metric.metric_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @metric.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:decimal_places) %>:</strong></dt>
  <dd><%= @metric.decimal_places %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              organization_metrics_path(parent), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_metric_path(parent,@metric), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_metric_path(parent,@metric),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
