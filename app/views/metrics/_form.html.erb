<%= simple_form_for [parent,@metric], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :metric_type, include_blank: false %>
  <%= f.input :name %>
  <%= f.input :decimal_places %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organization_metrics_path(parent), :class => 'btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organization_metrics_path(parent), :class => 'btn' %>
  </div>
<% end %>
