<%- model_class = AssignedSurvey -%>
<div class="page-header clearfix">
  <h1><%= resource %></h1>
</div>


<h3><%=t 'point_ranges' %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= 'name' %></th>
      <th><%= 'low' %></th>
      <th><%= 'high' %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assigned_survey.point_ranges.each do |point_range| %>
      <tr>
        <td><%= point_range.name %></td>
        <td><%= point_range.low %></td>
        <td><%= point_range.high %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      [:edit,@assigned_survey,point_range], :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      [@assigned_survey,point_range],
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('add_point_rage'),
              [:new, @assigned_survey, :point_range], :class => 'btn-primary btn' %>
              
  <%= link_to t('.back', :default => t("helpers.links.back")),
              parent_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_resource_path, :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              resource_path,
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
